{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Main",
            "request": "launch",
            "mainClass": "com.ibm.sk.tasktool.legacy.Main",
            "projectName": "todo"
        },
        {
            "type": "java",
            "name": "TodoApplication",
            "request": "launch",
            "mainClass": "com.ibm.sk.tasktool.TodoApplication",
            "projectName": "todo"
        },
        {
            "name": "Java",
            "type": "java",
            "request": "launch",
            "stopOnEntry": true,
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${fileDirname}",
            "startupClass": "${fileBasenameNoExtension}",
            "classpath": [
                ".",
                "${fileDirname}"
            ]
        },
        {
            "name": "Java Console App",
            "type": "java",
            "request": "launch",
            "stopOnEntry": true,
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${fileDirname}",
            "startupClass": "${fileBasenameNoExtension}",
            "classpath": [
                ".",
                "${fileDirname}"
            ],
            "externalConsole": true
        },
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "TodoApplication",
            "request": "launch",
            "mainClass": "com.ibm.sk.jacademy.todo.TodoApplication",
            "projectName": "todo",
            "vmArgs": "-Dspring.profiles.active=prod",
            "args": "--server.port=8080"
        }
    ]
}